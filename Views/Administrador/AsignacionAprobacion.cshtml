@{
    Layout = "_LayoutAdministrador";
}

<div class="container-fluid mt-2">

    <div class="row  pl-0 pr-0">

        <div class="pl-0 pr-0  col-lg-8 col-12 ">

            <div class="p-2">

                <div class="bg-white shadow">
                    <div class="shadow pl-3 pb-1 " style="background-color:#0abbec;">
                        <div class=" pt-2 ">
                            <h5 class="text-white font-weight-bold">Asignacion de aprobaciones</h5>
                        </div>
                    </div>

                    <div class="p-1">

                        <form action="" class="p-2" onsubmit="CargarAsignacionAprobacion(event);">

                            <span>Formulario para la asignacion de aprobaciones<span class="text-danger font-weight-bold"> *  Obligatorio</span> </span>

                            <div class="row pt-3">

                                <div class="col-lg-6 col-12" style="display:none;">
                                    <div class="form-group">

                                        <label>Sociedad</label>
                                        <input id="Is_CodSociedad" disabled type="text" class="form-control mt-2 form-control-sm rounded-0" required>

                                    </div>

                                </div>

                                <div class="col-lg-6 col-12 ">
                                    <div class="form-group">

                                        <label>Tipo de documento aprobacion</label>

                                        <select class="form-control form-control-sm rounded-0 mt-2" id="TipoDocumento">

                                            <option value="0">Seleccione Documento</option>
                                            <option value="1">Fondo por rendir</option>
                                            <option value="2">Rendición</option>
                                        </select>



                                    </div>

                                </div>

                                <div class="col-lg-6 col-12 ">

                                    <div class="form-group">

                                        <label>Fecha </label>
                                        <input id="Is_FechaCreacion" type="date" class="form-control form-control-sm mt-2  rounded-0" required>

                                    </div>

                                </div>
                            </div>


                            <div class="pt-2">
                                <div class="form-group">

                                    <label>Comentario</label>
                                    <textarea class="form-control mt-2" id="Is_Comentario" rows="3" maxlength="200" required></textarea>

                                </div>

                            </div>

                            <div class="table-responsive mt-3">
                                <div id="table" class="table-editable ">
                                    <span class="table-add float-right mb-3 mr-2">
                                        <a href="#!" class="text-success">
                                            <i aria-hidden="true">

                                                <img src="~/img/add.png" height="23px" />
                                            </i>
                                        </a>
                                    </span>
                                    <table id="thetable"
                                           class="table table-bordered table-responsive-md table-striped text-center table-hover">
                                        <thead>
                                            <tr>
                                                <th style="font-size:13px" class="text-center ">Nombre</th>
                                                <th style="font-size:13px" class="text-center ">Usuario</th>
                                                <th hidden style="font-size:13px" class="text-center text-info ">codigo</th>

                                            </tr>
                                        </thead>
                                        <tbody id="TablaDetalle">
                                            <tr>
                                                <td class="pt-3-half" contenteditable="true"></td>
                                                <td onclick="getFila();" class="pt-3-half" data-toggle="modal" data-target="#Modal"></td>
                                                <td hidden class="pt-3-half"></td>
                                                <td onclick="getFila();" class="text-center" width="40px">
                                                    <div class="d-flex justify-content-center ">
                                                        <a style="font-size:17px; text-decoration:none;" id="table-remove"
                                                           class="table-remove text-danger font-weight-bold ">
                                                            x
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="row ">

                                <div class="mt-1 pb-2">
                                    <button type="submit" style="background-color:#0abbec; border-color:#5abeda ;" class="btn rounded-0 btn-primary btn-sm shadow font-weight-bold mt-3 float-right">Registrar  documento</button>
                                </div>


                            </div>

                        </form>



                    </div>
                </div>

            </div>

        </div>


        <div class="pl-0 pr-0 col-lg-4 col-12 ">

            <div class="p-2">

                <div class="bg-white shadow">
                    <div class="shadow pl-3 pb-1 " style="background-color:#0abbec;">
                        <div class=" pt-2 ">
                            <h5 class="text-white font-weight-bold">Tipo aprobación</h5>
                        </div>
                    </div>

                    <div class="p-1">

                        <form action="" class="p-1" onsubmit="CargarAsignacionAprobacion(event);">

                            <div class="row pl-0 pr-0 mt-1 pb-1">

                                <div class="col-lg-12 p-2 col-12  ">

                                    <div class="p-2">

                                        <div class="border shadow rounded-0  bg-white p-3">
                                            <div class="text-center pb-1">
                                                <h5 class="text-dark ">Fondos por rendir</h5>

                                                <hr />
                                            </div>

                                            <div class="form-check">
                                                <input class="form-check-input" onclick="GuadarAprobacion(1,1)" name="exampleRadios" type="radio"id="11" value="11" >
                                                <label class="form-check-label" for="RadioFXR1">
                                                   Seguir con los aprobados.
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="exampleRadios"   onclick="GuadarAprobacion(1,2)" id="12" value="12">
                                                <label class="form-check-label" >
                                                   Terminar con al menos un rechazo.
                                                </label>
                                            </div>
                                        </div>

                                    </div>

                                </div>

                                <div class="col-lg-12 p-2 col-12  ">

                                    <div class="p-2">

                                        <div class="border rounded-0  bg-white shadow p-3">

                                            <div class="text-center pb-1">
                                                <h5 class="text-dark">Rendición</h5>
                                                <hr/>
                                            </div>

                                            <div class="form-check">
                                                <input class="form-check-input" name="exampleRadios2"  onclick="GuadarAprobacion(2,1)" type="radio" id="21" value="21" >
                                                <label class="form-check-label" for="RadioR1">
                                                    Seguir con los aprobados.
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" name="exampleRadios2"  onclick="GuadarAprobacion(2,2)" type="radio" id="22" value="22">
                                                <label class="form-check-label">
                                                    Terminar con al menos un rechazo.
                                                </label>
                                            </div>
                                        </div>

                                    </div>

                                </div>

                            </div>

                        </form>

                    </div>
                </div>

            </div>



        </div>


        <div class="col-lg-6  col-12 p-0 mt-2">

            <div class="p-1 ">


                <div class="bg-white shadow">

                    <div class="shadow pl-3 pb-1 " style="background-color:#0abbec;">
                        <div class=" pt-2 ">
                            <h5 class="text-white font-weight-bold">Etapas de aprobacion fondos por rendir</h5>
                        </div>
                    </div>

                    <div class="p-2 mt-2">

                        <table id="ActualAsig1" class="table table-striped table-bordered ">

                            <thead>

                                <tr class="bg-white">

                                    <th style="font-size: 13px;" class="text-center" scope="col">Numero Etapa</th>
                                    <th style="font-size: 13px;" class="text-center"  scope="col">Nombre</th>
                                    <th style="font-size: 13px;" class="text-center"  scope="col">Autorizador</th>
                                    <th style="font-size: 13px;" class="text-center" scope="col">Editar</th>
                                </tr>

                            </thead>

                            <tbody>
                            </tbody>
                        </table>

                    </div>

                </div>

            </div>
        </div>

        <div class="col-lg-6 col-12 p-0 mt-2">

            <div class="p-1">

                <div class="bg-white shadow">

                    <div class="shadow pl-3 pb-1 " style="background-color:#0abbec;">
                        <div class=" pt-2 ">
                            <h5 class="text-white font-weight-bold">Etapas de aprobacion rendición</h5>
                        </div>
                    </div>

                    <div class="p-2 mt-2">

                        <table id="ActualAsigDos" class="table table-striped table-bordered">

                            <thead>
                                <tr class="bg-white">

                                    <th style="font-size: 13px;" class="text-center" scope="col">Numero Etapa</th>
                                    <th style="font-size: 13px;" class="text-center" scope="col">Nombre</th>
                                    <th style="font-size: 13px;" class="text-center" scope="col">Autorizador</th>
                                    <th style="font-size: 13px;" class="text-center" scope="col">Editar</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>

                    </div>




                </div>

        </div>



    </div>


   

       

   

 </div>


<div class="modal fade bd-example-modal-lg" id="Modal" tabindex="-1" role="dialog"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Seleccione usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <table class="table  table-bordered  table-hover mt-4 " id="ListarUsuarios">
                    <thead>
                        <tr>

                            <th style="font-size:13px" scope="col">codigo usuario</th>
                            <th style="font-size:13px" scope="col">rut</th>
                            <th style="font-size:13px" scope="col">nombre</th>
                            <th style="font-size:13px" scope="col">apellido</th>

                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>


@section scripts {


    <script src="~/js/API/Administrador/AsignacionAprobacionAPI.js"></script>
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>


}
