@{
    Layout = "_LayoutLogin";
}

<div class="container mt-5">

    <div class="row justify-content-center pt-5">

        <div class="col-10 col-lg-4 shadow bg-white rounded-0 p-3 pb-4  ">

            <div class="text-center mt-3">
                <img class="" src="img/logo.png" alt="">
            </div>

            <div class="text-center mt-4">
                <h4>Ingrese con sus credenciales.</h4>
            </div>

            <div class="mt-3">

                <form onsubmit="POST_LOGIN(event);">

                    <div class="form-group pt-4 ">

                        <input class="form-control w-100 rounded-0 " id="txt_correo" placeholder="Ingrese correo" type="email" required>
                    </div>

                    <div class="form-group pt-4">

                        <input class="form-control w-100 rounded-0 " id="txt_pass" placeholder="Ingrese contraseña" type="password" required>
                    </div>

                    <div class="mt-4">
                        <span >¿Has olvidado tu contraseña? <a data-toggle="modal" class="trArticulo" data-target="#exampleModal"  style="text-decoration: none; color: #0abbec ;">Recuperar contraseña</a> </span>
                    </div>

               

                    <div class="mt-3">
                        <button type="submit" style="background:#00b1e4; border-color:#0abbec ;" class="btn rounded-0 btn-primary shadow font-weight-bold mt-3 float-right">
                            Iniciar sesion
                        </button>
                    </div>

                </form>

            </div>

        </div>

    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Recuperacíón contraseña</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body p-3">

                    <h6 class="mt-1">Se le enviara un código a su correo</h6>

                    <form onsubmit="enviar(event)">
                        <div class="row">



                            <div class="col-10">
                                <input class="form-control w-100 rounded-0 mt-3 " id="txt_correo_2" placeholder="Ingrese correo" type="email" required>
                            </div>

                            <div class="col-2">

                                <button type="submit" style="background:#00b1e4; border-color:#0abbec ;" class="btn rounded-0 btn-primary shadow font-weight-bold mt-3 float-right">
                                    Verificar
                                </button>

                            </div>



                        </div>

                    </form>

                    <input class="form-control w-100 rounded-0 mt-4 w-50 " id="txt_cod" placeholder="Ingrese código" type="number" required>

                    <div class="mt-3">

                        <button type="button"  onclick="VerificarCOD()" style="background:#00b1e4; border-color:#0abbec ;" class="btn btn-primary shadow font-weight-bold mt-3 float-right">
                            Verificar código
                        </button>

                    </div>

                </div>
               
            </div>
        </div>
    </div>
</div>


@section scripts {

   

    <script src="~/js/API/Login/LoginAPI.js"></script>
}


