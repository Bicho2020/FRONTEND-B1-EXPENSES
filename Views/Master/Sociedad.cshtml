@{
    Layout = "_LayoutMaster";
}

<div class="row">

    <div class="col-lg-6 col-sm-12 col-md-12 col-12   pt-3 ">

        <div class="col-12 shadow bg-white  pb-2 border  ">

            <div style="background-color: #0abbec;" class="  p-2 ">

                <div class="float-left ml-3">
                    <span style="font-size: 18px;" class="text-white font-weight-bold ">
                        Registrar
                        sociedad
                    </span>
                </div>
                <br>

            </div>

            <form class="container-fluid mt-3" onsubmit="POST_SOCIEDAD(event)">

                <span class="text-dark">
                    Formulario para registro de sociedades. <span class="text-danger  pl-3 " style="font-weight: 500; font-size:14px;">
                        * Campos
                        Obligatorios
                    </span>
                </span>


                <div class="row mt-2 ">

                    <div class="col-12 col-sm-12 col-md-12 col-lg-6 pt-2">
                        <div class="form-group">
                            <label for="" class="text-dark " style="font-weight: 400;">
                                Codigo <span class="text-danger"> * </span>
                            </label>
                            <input type="text" class="form-control rounded-0 mt-2 form-control-sm" minlength="3" maxlength="30" id="IsCod" placeholder="Ingrese codigo de la sociedad" required>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 pt-2">
                        <div class="form-group">
                            <label for="" class="text-dark " style="font-weight: 400;">
                                Nombre <span class="text-danger"> * </span>
                            </label>
                            <input placeholder="Ingrese nombre de la sociedad" type="text" minlength="2" maxlength="30" class="   form-control rounded-0 mt-2 form-control-sm" id="IsNombre" required>
                        </div>
                    </div>

                </div>

                <div class="row ">

                    <div class="col-12 col-lg-6 pt-2">
                        <div class="form-group">
                            <label for="" class="text-dark " style="font-weight: 400;">
                                Servidor<span class="text-danger"> * </span>
                            </label>
                            <input placeholder="Ingrese nombre del servidor" type="text" minlength="2" maxlength="30" class="form-control rounded-0 mt-2 form-control-sm" id="IsServidor"
                                   required>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 pt-2">
                        <div class="form-group">
                            <label for="" class="text-dark " style="font-weight: 400;">
                                Enlance<span class="text-danger"> * </span>
                            </label>
                            <input placeholder="Ingrese enlace " type="text" minlength="2" maxlength="30" class=" form-control rounded-0 mt-2 form-control-sm" id="IsEnlace" required>
                        </div>
                    </div>

                </div>

                <div class="row ">

                    <div class="col-12 col-lg-6 pt-2">
                        <div class="form-group">
                            <label for="" class="text-dark " style="font-weight: 400;">
                                Usuario SAP<span class="text-danger"> * </span>
                            </label>
                            <input placeholder="Ingrese usuario Sap" type="text" minlength="2" maxlength="30" class="form-control rounded-0 mt-2 form-control-sm" id="IsUsuario" required>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 pt-2">
                        <div class="form-group">
                            <label for="" class="text-dark " style="font-weight: 400;">
                                Contraseña SAP<span class="text-danger">
                                    *
                                </span>
                            </label>
                            <input placeholder="Ingrese contraseña Sap" minlength="2" maxlength="30" type="password" class=" form-control rounded-0 mt-2 form-control-sm" id="IsPass" required>
                        </div>
                    </div>

                </div>

                <div class="row ">

                    <div class="col-12 col-lg-6 pt-2">
                        <div class="form-group">
                            <label for="" class="text-dark " style="font-weight: 400;">
                                Usuario BD<span class="text-danger"> * </span>
                            </label>
                            <input placeholder="Ingrese usuario BD" type="text" minlength="2" maxlength="30" class="form-control rounded-0 mt-2 form-control-sm" id="IsUserBD" required>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 pt-2">
                        <div class="form-group">
                            <label for="" class="text-dark " style="font-weight: 400;">
                                Contraseña BD<span class="text-danger">
                                    *
                                </span>
                            </label>
                            <input placeholder="Ingrese contraseña BD" minlength="2" maxlength="30" type="password" class=" form-control rounded-0 mt-2 form-control-sm" id="IsPassBD" required>
                        </div>
                    </div>

                </div>

                <div class="row ">

                    <div class="col-12 col-lg-6 pt-2">
                        <div class="form-group">
                            <label for="" class="text-dark " style="font-weight: 400;">
                                BD<span class="text-danger"> * </span>
                            </label>
                            <input id="Isbd"  placeholder="Ingrese BD" type="text" minlength="2" maxlength="30" class="form-control rounded-0 mt-2 form-control-sm" required>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 pt-2">
                        <div class="form-group">
                            <label for="" class="text-dark " style="font-weight: 400;">
                                Version BD<span class="text-danger">
                                    *
                                </span>
                            </label>
                            <input placeholder="Ingrese version de BD " minlength="1"  maxlength="30" type="text" class=" form-control rounded-0 mt-2 form-control-sm" id="IsBDVERSION" required>
                        </div>
                    </div>

                </div>

       

                <div class="row ">

                    <div class="mt-2 pb-2">
                        <button type="submit" style="background-color: #0abbec; border-color: #5abeda;"
                                class="btn rounded-0 btn-primary btn-sm shadow font-weight-bold mt-3 float-right">
                            Registrar
                            Sociedad
                        </button>
                    </div>

                </div>

            </form>

        </div>

        <div class="col-12 shadow bg-white mt-4    ">

            <div style="background-color: #0abbec;" class="   p-2 ">

                <div class="float-left ml-3">
                    <span style="font-size: 18px;" class="text-white font-weight-bold  ">Asignar sociedades</span>
                </div>


                <div class="float-right">


                </div>
                <br>

            </div>

            <div class="p-2">
                <input type="type" class="form-control form-control-sm rounded-0 mt-2 w-50 " placeholder="Filtrar usuarios" id="FiltroSociedad" />
            </div>


            <div class="table-responsive p-2 ">

                <table class="table table-striped table-bordered  table-hover" id="TablaAsignarSociedades">

                    <thead class="thead-dark ">
                        <tr>

                            <th scope="col" class="text-center" style="font-size: 13px; font-weight: 500;">Rut</th>
                            <th scope="col" class="text-center" style="font-size: 13px; font-weight: 500;">Nombre</th>
                            <th scope="col" class="text-center" style="font-size: 13px; font-weight: 500;">Apellido</th>
                            <th scope="col" class="text-center" style="font-size: 13px; font-weight: 500;">Asignar</th>

                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>

            </div>



        </div>



    </div>

    <div class="col-lg-6 col-sm-12 mt-3 col-md-12 col-12 col-md-12 ">

        <div class="col-12 shadow bg-white    ">

            <div style="background-color: #0abbec;" class="   p-2 ">

                <div class="float-left ml-3">
                    <span style="font-size: 18px;" class="text-white font-weight-bold  ">
                        Lista de
                        sociedades
                    </span>

                </div>

                <div class="float-right">


                </div>
                <br>

            </div>

            <div class="p-2">
                <input type="type" class="form-control form-control-sm rounded-0 mt-2 w-50 " placeholder="Filtrar sociedadedes" id="FiltroUsuario" />
            </div>


            <div class="table-responsive p-2 ">

                <table class="table table-striped table-bordered  table-hover " id="records_table">

                    <thead class="thead-dark ">
                        <tr>

                            <th scope="col" class="text-center" style="font-size: 13px; font-weight: 500;">Codigo</th>
                            <th scope="col" class="text-center" style="font-size: 13px; font-weight: 500;">Nombre</th>
                            <th scope="col" class="text-center" style="font-size: 13px; font-weight: 500;">Servidor</th>
                            <th scope="col" class="text-center" style="font-size: 13px; font-weight: 500;">Enlace</th>
                            <th scope="col" class="text-center" style="font-size: 13px; font-weight: 500;">
                                Modificar
                            </th>
                            <th scope="col" style="font-size: 13px; font-weight: 500;">
                                Opcion
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>

            </div>



        </div>


    </div>



</div>


@section scripts {

    <script src="~/js/API/Master/SociedadAPI.js"></script>
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>


}

